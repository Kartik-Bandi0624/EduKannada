<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffe9e9">

    <RelativeLayout
        android:id="@+id/relative_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <!--   <ImageView
           android:id="@+id/image"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/hearts"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_above="@id/curved_image"
        android:layout_below="@id/relative_lt">

        <LinearLayout
            android:id="@+id/heart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_below="@id/relative_lt">


            <EditText
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="10dp"
                android:hint="Enter Your Email Id"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginBottom="14dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editPassword"
                android:inputType="textPassword"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="10dp"
                android:hint="Password"
                android:textColor="#fff"
                android:background="@null"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <!--     <TextView
                     android:layout_width="100dp"
                     android:layout_height="50dp"
                     android:layout_below="@id/edit1"
                     android:layout_centerInParent="true"
                     android:visibility="invisible"
                     android:textColor="#ff0000"
                     android:layout_marginTop="45dp"/>-->

        </LinearLayout>

        <!--<ImageView
            android:id="@+id/heart1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/double_heart"
            android:layout_below="@id/heart"
            android:layout_centerHorizontal="true"/>-->

        <TextView
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="0dp"

            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Login"
            android:textAllCaps="true"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Remember Me"
        android:layout_above="@id/curved_image"
        android:textStyle="bold"
        android:id="@+id/rememberme"
        android:textColor="#000" />



    <TextView android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="bold"
        android:layout_above="@id/curved_image"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:textColor="#000"/>

    <LinearLayout
        android:id="@+id/curved_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"/>

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pink_yellow1"
        android:layout_marginTop="25dp"
        android:layout_below="@id/text"/>-->

    <TextView
        android:id="@+id/new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingBottom="30dp"
        android:text="New User? Register"
        android:textColor="#007fff"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>