<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE8E0"
    tools:context=".Activity.CreateAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#018CCD"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/parent_create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="7dp">

            <LinearLayout
                android:id="@+id/parent_create_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DCE8E0"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/CreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#75D3FF"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:padding="10dp"
                    android:text="Create Account"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="1.5dp"
                    android:alpha="0.8"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_email"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:hint="User name"
                    android:inputType="textPersonName"
                    android:paddingStart="18dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="1.5dp"
                    android:alpha="0.8"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_email"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="1.5dp"
                    android:alpha="0.8"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_email"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="1.5dp"
                    android:alpha="0.8"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Phone No"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_email"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:hint="Enter phone no"
                    android:inputType="phone"
                    android:paddingStart="18dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/otp_gen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/save_btn"
                        android:fontFamily="@font/cormorant_garamond_bold"
                        android:text="Generate OTP"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:visibility="visible" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/otp_enter"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_email"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:hint="Enter otp"
                    android:inputType="number"
                    android:paddingStart="18dp" />

                <Button
                    android:id="@+id/otp_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/submit_btn"
                    android:fontFamily="@font/cormorant_garamond_bold"
                    android:text="Verify OTP &amp; Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>