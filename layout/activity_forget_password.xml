<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.ForgetPassword">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/background"
            android:orientation="vertical">

            <EditText
                android:id="@+id/forgotpasswordemailid"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_email"
                android:fontFamily="@font/cormorant_garamond_bold"
                android:hint="Email id"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/buttonforgotpassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/submit_btn"
                android:fontFamily="@font/cormorant_garamond_bold"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="#ff0000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/cormorant_garamond_bold"
                android:gravity="center"
                android:text="Log in"
                android:textColor="#012342"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>