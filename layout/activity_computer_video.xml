<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/computer_video"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activity.ComputerVideo">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <TextView
            android:id="@+id/comp_one"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:background="@drawable/save_btn"
            android:fontFamily="@font/cormorant_garamond_bold"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="1) Computer full\n video by youtube link"
            android:textAllCaps="false"
            android:textColor="@drawable/change_color"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <TextView
            android:id="@+id/comp_two"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:background="@drawable/save_btn"
            android:fontFamily="@font/cormorant_garamond_bold"
            android:gravity="center"
            android:text="2) Computer half\n video by youtube link"
            android:textAllCaps="false"
            android:textColor="@drawable/change_color"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <TextView
            android:id="@+id/comp_three"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:background="@drawable/save_btn"
            android:fontFamily="@font/cormorant_garamond_bold"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="3) Computer youtube\n live video by link"
            android:textAllCaps="false"
            android:textColor="@drawable/change_color"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>